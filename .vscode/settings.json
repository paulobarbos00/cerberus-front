    "tsconfig.json": true,
    "tsconfig.node.json": true,

    // Next
    ".next": true,
    ".eslintrc.json": true,
    ".prettierrc.json": true,
    "next.config.js": true,
    "next-env.d.ts": true,
    ".env.local": false
